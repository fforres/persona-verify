{
  "name": "persona",
  "version": "2.0.5",
  "description": "The official web client library for the Persona API.",
  "main": "index.js",
  "repository": "https://github.com/persona-id/persona-verify.git",
  "author": "Charles Yeh <charles@withpersona.com>",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "deploy": "yarn jest && webpack && gsutil cp dist/persona.js gs://cdn.withpersona.com/assets/v2/persona.js"
  },
  "dependencies": {
    "core-js": "^3.0.0",
    "qs": "^6.7.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.4.2",
    "@types/jest": "^24.0.5",
    "@types/qs": "^6.5.3",
    "@types/react": "^16.8.2",
    "@types/react-dom": "^16.8.0",
    "@types/styled-components": "^4.1.9",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.5",
    "jest": "^24.1.0",
    "react-svg-loader": "^3.0.3",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^23.10.5",
    "typescript": "^3.3.3",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3"
  },
  "jest": {
    "roots": [
      "src"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(svg)$": "<rootDir>/src/spec/svgMock.tsx"
    },
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
