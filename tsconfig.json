{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
